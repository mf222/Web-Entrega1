<p id="notice"><%= notice %></p>

<h1 >Versiones Internet Explorer</h1>

<table border="1">
  <thead>
    <tr>
      <th>Name</th>
      <th>Version</th>
      <th>Year</th>
      <th>Month</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @explorers.each do |explorer| %>
      <tr>
        <td><%= explorer.name %></td>
        <td><%= explorer.version %></td>
        <td><%= explorer.year %></td>
        <td><%= explorer.month %></td>
        <td><%= link_to 'Ver', explorer %></td>
        <td><%= link_to 'Editar', edit_explorer_path(explorer) %></td>
        <td><%= button_to 'Delete', explorer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Version', {:controller => 'explorers', :action => 'new'}, {:method => :get } %>
